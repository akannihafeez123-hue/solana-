# .env for Legendary Pocket Option AI Scanner

# Telegram Bot Token from BotFather
TELEGRAM_TOKEN=123456789:ABCDEF_your_real_token_here

# Telegram Chat ID (your user or group ID)
CHAT_ID=987654321

# Use mock data locally (True/False). Real data uses Yahoo Finance with OTC emulation.
USE_MOCK_DATA=False

# Legendary confidence gate threshold
CONF_GATE=85

# Cooldown in minutes for duplicate asset+expiry alerts
COOLDOWN_MINUTES=20

# Daily training hour (UTC)
DAILY_TRAIN_HOUR_UTC=3

# Scan interval in seconds
SCAN_INTERVAL_SEC=60

# Run once and exit (true for GitHub Actions scheduled scans)
RUN_ONCE=False
