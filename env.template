# ============================================================
# ULTIMATE TRADING BOT V5.0 - CONFIGURATION FILE
# 80-90% Win Rate Optimization Settings
# ============================================================

# ------------------------------------------------------------
# REQUIRED SETTINGS (Must Configure)
# ------------------------------------------------------------

# Telegram Bot Configuration
# Get token from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Your Telegram Chat ID
# Get from @userinfobot on Telegram
CHAT_ID=your_chat_id_here

# Alpha Vantage API Key (for market data)
# Get free key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# ------------------------------------------------------------
# WIN RATE OPTIMIZATION SETTINGS
# ------------------------------------------------------------

# Base Confidence Threshold (95-99)
# Higher = More selective (fewer signals, higher accuracy)
# 98 = Recommended for 85% win rate
BASE_CONFIDENCE_THRESHOLD=98

# Minimum Strategy Alignment (4-6)
# How many of 6 strategies must agree on signal
# 5 = Recommended (83% agreement required)
MIN_STRATEGY_ALIGNMENT=5

# Minimum Indicator Alignment (3-5)
# How many of 5 indicators must confirm signal
# 4 = Recommended (80% agreement required)
MIN_INDICATOR_ALIGNMENT=4

# Minimum Timeframe Alignment (3-5)
# How many of 5 timeframes must show same direction
# 4 = Recommended (80% agreement required)
MIN_TIMEFRAME_ALIGNMENT=4

# ------------------------------------------------------------
# ADAPTIVE THRESHOLD SYSTEM
# ------------------------------------------------------------

# Enable Adaptive Threshold (True/False)
# Bot automatically adjusts threshold based on performance
# True = Recommended for self-optimization
ENABLE_ADAPTIVE_THRESHOLD=True

# Threshold Adjustment Period (10-30)
# Adjust threshold every N signals
# 20 = Good balance between responsiveness and stability
THRESHOLD_ADJUSTMENT_PERIOD=20

# Target Win Rate (0.80-0.90)
# What win rate to aim for
# 0.85 = 85% win rate target (recommended)
TARGET_WIN_RATE=0.85

# ------------------------------------------------------------
# RISK MANAGEMENT
# ------------------------------------------------------------

# Maximum Daily Signals (10-20)
# Limit total signals per day to prevent overtrading
# 15 = Good balance (quality over quantity)
MAX_DAILY_SIGNALS=15

# Maximum Consecutive Losses (2-3)
# Stop trading after N losses in a row
# 2 = Conservative (recommended)
MAX_CONSECUTIVE_LOSSES=2

# Cooldown Minutes (15-30)
# Minutes to wait between signals for same asset/expiry
# 20 = Prevents overtrading same asset
COOLDOWN_MINUTES=20

# ------------------------------------------------------------
# SIGNAL QUALITY SCORING
# ------------------------------------------------------------

# Enable Quality Score Filter (True/False)
# Require minimum quality score for signals
# True = Recommended for high win rate
ENABLE_SIGNAL_QUALITY_SCORE=True

# Minimum Quality Score (7.0-10.0)
# Signals below this score are rejected
# 8.5 = Premium quality signals only
MIN_QUALITY_SCORE=8.5

# ------------------------------------------------------------
# SCANNING SETTINGS
# ------------------------------------------------------------

# Scan Interval Seconds (30-60)
# Time between market scans
# 45 = Good balance (not too fast, not too slow)
SCAN_INTERVAL_SEC=45

# Run Once (True/False)
# True = Scan once and exit (for testing)
# False = Continuous scanning (for live trading)
RUN_ONCE=False

# Scan Only Mode (True/False)
# True = No Flask web server (lighter)
# False = Run web server + scanning
SCAN_ONLY=False

# ------------------------------------------------------------
# SERVER SETTINGS
# ------------------------------------------------------------

# Flask Server Port (1024-9999)
# Port for web dashboard and API
# 8080 = Standard port
PORT=8080

